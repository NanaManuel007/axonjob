{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$houdini": [
                "."
            ],
            "$houdini/*": [
                "./*"
            ],
            "~": [
                "../src"
            ],
            "~/*": [
                "../src/*"
            ]
        },
        "rootDirs": [
            "..",
            "./types"
        ],
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "ambient.d.ts",
        "./types/**/$types.d.ts",
        "../vite.config.ts",
        "../src/**/*.js",
        "../src/**/*.ts",
        "../src/**/*.jsx",
        "../src/**/*.tsx",
        "../src/+app.d.ts"
    ],
    "exclude": [
        "../node_modules/**",
        "./[!ambient.d.ts]**"
    ]
}